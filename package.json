{
  "name": "@naturalcycles/cli",
  "scripts": {
    "prepare": "husky install",
    "debug": "tsn ./src/bin/tsn.ts",
    "tsn-debug": "tsc && CLI_DEBUG=1 node ./dist/bin/tsn.js testscript.ts",
    "tsn2-debug": "tsc && CLI_DEBUG=1 node ./dist/bin/tsn2.js testscript.ts"
  },
  "dependencies": {
    "@naturalcycles/nodejs-lib": "^12.8.0",
    "chalk": "^4.0.0",
    "dotenv": "^10.0.0",
    "esbuild": "^0.13.13",
    "esbuild-register": "^3.1.2",
    "loud-rejection": "^2.2.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@naturalcycles/dev-lib": "^12.1.2",
    "@types/node": "^16.6.1",
    "jest": "^27.0.6"
  },
  "files": [
    "dist",
    "cfg",
    "src",
    "!src/test",
    "!src/**/*.test.ts",
    "!src/**/__snapshots__",
    "!src/**/__exclude"
  ],
  "main": "dist/index.js",
  "bin": {
    "tsn2": "dist/bin/tsn2.js",
    "tsn": "dist/bin/tsn.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NaturalCycles/cli"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "version": "1.2.5",
  "description": "CLI utils to be installed globally via 'npm i -g'",
  "author": "Natural Cycles Team",
  "license": "MIT"
}
