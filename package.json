{
  "name": "@naturalcycles/cli",
  "scripts": {
    "prepare": "husky",
    "debug": "tsn ./src/bin/tsn.ts",
    "tsn-debug": "tsc && CLI_DEBUG=1 node ./dist/bin/tsn.js testscript.ts",
    "tsn-debug-esbuild": "tsc && CLI_DEBUG=1 TSN_ESBUILD=1 node ./dist/bin/tsn.js testscript.ts"
  },
  "dependencies": {
    "@naturalcycles/nodejs-lib": "^13.0.1",
    "dotenv": "^16.0.0",
    "ts-node": "^10.0.0",
    "tslib": "^2.6.2",
    "typescript": "^5.0.2"
  },
  "devDependencies": {
    "@naturalcycles/dev-lib": "^14.0.1",
    "@types/node": "^20.2.2"
  },
  "files": [
    "dist",
    "cfg",
    "src",
    "!src/test",
    "!src/**/*.test.ts",
    "!src/**/__snapshots__",
    "!src/**/__exclude"
  ],
  "main": "dist/index.js",
  "bin": {
    "tsn": "dist/bin/tsn.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NaturalCycles/cli"
  },
  "engines": {
    "node": ">=20.12.0"
  },
  "version": "1.2.5",
  "description": "CLI utils to be installed globally via 'npm i -g'",
  "author": "Natural Cycles Team",
  "license": "MIT"
}
